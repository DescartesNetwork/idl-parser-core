{
  "compilerOptions": {
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es6", "esnext.bigint", "DOM"],
    "jsx": "react-jsx",
    "declaration": true,
    "esModuleInterop": true,
    "strictBindCallApply": false,
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "useDefineForClassFields": true
  },
  "include": ["src"]
}
